{
  "name": "minicraft-2d-electron-pro",
  "version": "0.3.0",
  "description": "Minecraft-like 2D game in Electron with LAN, world saves and auto-update",
  "main": "main.js",
  "author": "docovg",
  "repository": {
    "type": "git",
    "url": "https://github.com/docovg/Minecraft2D.git"
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "dependencies": {
    "ws": "^8.16.0",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^25.0.5"
  },
  "build": {
    "appId": "com.docovg.minecraft2d",
    "productName": "Minecraft2D",
    "files": [
      "main.js",
      "src/**/*",
      "saves/**/*",
      "servers.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "docovg",
        "repo": "Minecraft2D"
      }
    ]
  }
}
